/*
Chapter 16: Creating Output  
*/

LIBNAME cert "/home/u45038867/cert";
/*
Example: Using the ODS HTML statement and BODY option to 
create output in a named file  
*/

*opening a HTML document to be written;
ODS HTML body="/home/u45038867/cert/admit.html";

PROC PRINT data=cert.admit label;
	var sex age height weight actlevel;
	label actlevel='Activity Level';
RUN;

*Everything between the ODS statements will be written to admit.html;
ODS HTML CLOSE;

*Resetting ODS;
ODS HTML path="%qsysfunc(pathname(work))";



/*
Example using BODY=, CONTENTS=, and FRAME= options
to create an HTML file that contains a Table of contents
*/

*Creating three files that will appear in the cert library;
* I had to add the url option so that the fram file will work when
all files are downloaded from SAS Studio;
ODS HTML body="/home/u45038867/cert/data.html" (url='data.html')
	contents="/home/u45038867/cert/toc.html" (url='toc.html')
	frame="/home/u45038867/cert/frame.html";
	
PROC PRINT data=cert.admit (obs=10) label;
	var id sex age height weight actlevel;
	label actlevel="Activity Level";
RUN;

PROC PRINT data=cert.stress2 (obs=10);
	var id resthr maxhr rechr;
RUN;

ODS HTML close;
ODS HTML path="%qsysfunc(pathname(work))";



/*
Another example using PATH= with URL=NONE

This allows us to specify where the files go but with out relative references
used in the URL links
*/


ODS html path="/home/u45038867/cert/toc_none/" (url=none)
	body='data_none.html'
	contents='toc_none.html'
	frame='frame_none.html';

PROC CONTENTS data=cert.admit;
RUN;

PROC PRINT data=cert.admit;
RUN;

PROC PRINT data=cert.stress2;
RUN;

ODS HTML CLOSE;
ODS HTML path="%qsysfunc(pathname(work))";



/*
Example using the Style option to change the 
appearance of the html file  
*/
ODS html body="/home/u45038867/cert/data_style.html"
	style=Harvest;
	
PROC PRINT data=cert.admit label;
	var sex age height weight actlevel;
RUN;

ODS html close;

/*This lists all the available styles
57 available 
*/
PROC template;
	list styles/store=sashelp.tmplmst;
RUN;








